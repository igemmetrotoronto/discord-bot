{
  "name": "igem-metro-toronto-discord-bot",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "start": "NODE_ENV=production node dist/src",
    "dev:build": "tsc --build --watch | gsed -u 's/\\x1Bc//g'",
    "dev:run": "nodemon dist/src",
    "dev": "concurrently \"npm:dev:build\" \"npm:dev:run\""
  },
  "author": "Samuel Martineau",
  "devDependencies": {
    "@types/node": "^18.15.10",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.15.0",
    "discord.js": "^14.8.0",
    "exit-hook": "^3.2.0",
    "libsodium-wrappers": "^0.7.11",
    "lodash": "^4.17.21",
    "openai": "^3.2.1",
    "uuid": "^9.0.0",
    "wav": "^1.0.2"
  }
}
